
<ul>
    <h1>Pistas que pueden ver el resto de jugadores:</h1>
    <% for (var i in tips) { %>
    <% var tip = tips[i]; %>
    <% var isAdmin = session.user && session.user.isAdmin; %>
    <% var isTipAuthor = session.user && tip.AuthorId && tip.AuthorId === session.user.id; %>

    <% if (tip.accepted && (isAdmin || isTipAuthor)) { %>

    <li>
        <%= tip.text %>
        <a href="/quizzes/<%= tip.QuizId %>/tips/<%= tip.id %>?_method=DELETE">
            <button>Borrar</button>
        </a>
        <a href="/quizzes/<%= tip.QuizId %>">
            <button>Ver su pregunta</button>
        </a>

    <% } %>

    </li>
    <% } %>


    <h1>Pistas no aceptadas:</h1>
    <% for (var i in tips) { %>
    <% var tip = tips[i]; %>
    <% var isAdmin = session.user && session.user.isAdmin; %>
    <% var isTipAuthor = session.user && tip.AuthorId && tip.AuthorId === session.user.id; %>

    <% if (!tip.accepted && (isAdmin || isTipAuthor)) { %>

    <li>
        <%= tip.text %>
        <a href="/quizzes/<%= tip.QuizId %>/tips/<%= tip.id %>/accept?_method=PUT">
            <button>Aceptar</button>
        </a>

        <a href="/quizzes/<%= tip.QuizId %>/tips/<%= tip.id %>?_method=DELETE">
            <button>Borrar</button>
        </a>
        <a href="/quizzes/<%= tip.QuizId %>">
            <button>Ver su pregunta</button>
        </a>

    <% } %>
    </li>

    <% } %>
</ul>